#!/bin/bash

. docker-images

if tty 2>&1 > /dev/null ; then
        INTERACTIVE="-it"
else
        INTERACTIVE=""
        echo "No terminal detected, running in non-interactive mode"
fi

docker run --rm \
	 ${INTERACTIVE} \
    --net host \
    --volume `pwd`:/app \
    --volume /tmp:/tmp \
    --workdir /app \
    --user $(id -u):$(id -g) \
    --entrypoint php \
    "$PHP_IMAGE" "$@"
