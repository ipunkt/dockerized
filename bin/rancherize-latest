#!/bin/bash

. docker-images

RANCHERIZE_LATEST="ipunktbs/rancherize:latest"

docker pull $RANCHERIZE_LATEST

docker run --rm \
    --interactive \
    --name rancherize \
    --volume $HOME/.rancherize:/home/rancherize/.rancherize \
    --volume /var/run/docker.sock:/var/run/docker.sock \
    --volume $(pwd):$(pwd) \
    --workdir $(pwd) \
    -e "USER_ID=$(id -u)" \
    -e "GROUP_ID=$(id -g)" \
    $RANCHERIZE_LATEST "$@"
