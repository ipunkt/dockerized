#!/bin/bash

VERSION=9

docker run --rm \
    --interactive \
    --tty \
    --net host \
    --volume `pwd`:/app \
    --volume ~/.cache:/.cache \
    --volume ~/.yarnrc:/.yarnrc \
    --volume ~/.yarn:/.yarn \
    --workdir /app \
    --user $(id -u):$(id -g) \
    --entrypoint yarn \
    node:$VERSION "$@"
