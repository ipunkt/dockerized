#!/bin/bash

. docker-images

mkdir -p /tmp/.composer

docker run --rm \
    --interactive \
    --tty \
    --net host \
    --volume `pwd`:/opt \
    --volume /tmp/.composer:/.composer:rw \
    --volume /tmp/.composer:/composer:rw \
    -w /opt \
    --user $(id -u):$(id -g) \
    --entrypoint composer \
    "$COMPOSER_IMAGE" "$@"
